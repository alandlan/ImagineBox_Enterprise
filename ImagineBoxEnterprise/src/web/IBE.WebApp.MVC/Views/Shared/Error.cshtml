@model IBE.WebApp.MVC.Models.ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

@{
    if (Model == null)
    {


        <div style="text-align: center; padding: 20%;">
            <h2>Ooops! Ocorreu um erro, mas não se preocupe. Nosso tima será avisado e iremos corrigir em breve!</h2>
        </div>
    }
    else
    {
        ViewData["Title"] = Model.Titulo;
    <div style="text-align: center; padding: 20%;">
        <h2>@Html.Raw(Model.Mensagem)</h2>
    </div>
    }

    
}